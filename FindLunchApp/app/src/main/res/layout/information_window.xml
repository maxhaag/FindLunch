<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/info_window_favourite"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/icon_margin"
        android:paddingStart="@dimen/icon_margin"
        android:contentDescription="@string/favourite_logo_description"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/info_window_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/info_window_favourite"
        android:layout_toStartOf="@id/info_window_favourite"
        android:textStyle="bold"
        android:textColor="@color/primary_text_default_material_light"/>

    <TextView
        android:id="@+id/info_window_offerTime"
        android:layout_below="@id/info_window_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/info_window_restaurantType"
        android:layout_below="@id/info_window_offerTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info_window_kitchenType"
        android:layout_below="@id/info_window_restaurantType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info_window_distance"
        android:layout_below="@id/info_window_kitchenType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>