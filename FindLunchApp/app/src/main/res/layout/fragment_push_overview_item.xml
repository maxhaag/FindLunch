<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_margin" >

    <ImageView
        android:id="@+id/iconDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete_black"
        android:contentDescription="@string/delete_logo_description"/>

    <TextView
        android:id="@+id/pushName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/iconDelete"
        android:layout_toStartOf="@id/iconDelete"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iconWeekdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/pushName"
        android:src="@drawable/ic_today_black"
        android:contentDescription="@string/price_logo_weekdays"/>

    <TextView
        android:id="@+id/pushWeekdays"
        android:paddingRight="@dimen/text_margin_half"
        android:paddingEnd="@dimen/text_margin_half"
        android:paddingLeft="@dimen/text_margin_half"
        android:paddingStart="@dimen/text_margin_half"
        android:layout_below="@+id/pushName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconWeekdays"
        android:layout_toEndOf="@id/iconWeekdays"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/iconFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/iconWeekdays"
        android:src="@drawable/ic_filter_list_black"
        android:contentDescription="@string/title_filter"/>

    <TextView
        android:id="@+id/pushKitchenTypes"
        android:paddingRight="@dimen/text_margin_half"
        android:paddingEnd="@dimen/text_margin_half"
        android:paddingLeft="@dimen/text_margin_half"
        android:paddingStart="@dimen/text_margin_half"
        android:layout_below="@+id/iconWeekdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconFilter"
        android:layout_toEndOf="@id/iconFilter"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>